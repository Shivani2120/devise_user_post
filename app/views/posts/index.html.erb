<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-striped table-bordered table-hover" >
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Likes</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @posts.each do |post| %>
      <tr> 
        <p> 
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.post_likes.count %> <%= (post.post_likes.count) == 1 ? 'Like' : 'Likes'%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= button_to 'Destroy', post_path(post) ,method: :delete,  data: { 
           
           confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Post', new_post_path, class:"btn btn-secondary" %>
